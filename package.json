{
  "name": "install-linuxdeploy-action",
  "version": "1.3.2",
  "private": true,
  "description": "Install linuxdeploy action for github actions",
  "main": "lib/main.js",
  "icon": "linuxdeploy.png",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package",
    "preversion": "npm ci && npm run build && npm clean && npm ci --production && git add node_modules lib -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miurahr/install-linuxdeploy-action.git"
  },
  "author": "miurahr",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.0",
    "@vercel/ncc": "^0.25.1",
    "tsc": "^1.20150623.0"
  },
  "devDependencies": {
    "@types/node": "^12.0.4",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.13.0",
    "eslint-plugin-github": "^4.1.1",
    "js-yaml": "^3.14.0",
    "prettier": "2.1.1",
    "typescript": "^4.0.2"
  }
}
